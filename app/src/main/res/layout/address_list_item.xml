<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_booking"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="2dp"
    android:padding="4dp"
    card_view:cardBackgroundColor="@color/light_gray"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:padding="@dimen/DP3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_address_name"
                    android:layout_width="wrap_content"
                    android:text="name"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/SP16"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_pincode"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/SP14"
                    android:text="picnode"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_address_line_one"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/SP14"
                    android:text="Address"
                    android:textColor="@color/text_gray"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txt_address_line_two"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/SP14"
                    android:text="Address"
                    android:textColor="@color/text_gray"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="0.60"
                android:weightSum="1"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_select_deliver_address"
                    android:layout_width="match_parent"
                    android:background="@drawable/add_button_background"
                    android:text="@string/select_address"
                    android:textAllCaps="false"
                    android:textSize="@dimen/SP16"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/DP4"
                    android:textColor="@color/black"
                    android:layout_height="@dimen/DP35" />

<!--                <ImageView-->
<!--                    android:id="@+id/btn_delete_deliver_address"-->
<!--                    android:layout_width="60dp"-->
<!--                    android:layout_gravity="end"-->
<!--                    android:padding="@dimen/DP8"-->
<!--                    android:src="@android:drawable/ic_delete"-->
<!--                    android:layout_height="wrap_content" />-->

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:id="@+id/img_user"-->
<!--                android:layout_width="@dimen/DP60"-->
<!--                android:layout_gravity="center"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@drawable/slide_two"-->
<!--                android:padding="@dimen/DP5"-->
<!--                android:layout_height="@dimen/DP60" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/DP3"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.50"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/txt_city_address"
                        android:layout_width="wrap_content"
                        android:text="city"
                        android:padding="@dimen/DP5"
                        android:textColor="@color/black"
                        android:textSize="@dimen/SP16"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/txt_state_address"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/SP12"
                        android:text="Address"
                        android:padding="@dimen/DP5"
                        android:textColor="@color/green"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/btn_delete_deliver_address"
                android:layout_width="60dp"
                android:layout_gravity="end"
                android:padding="@dimen/DP8"
                android:visibility="gone"
                android:src="@android:drawable/ic_delete"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>