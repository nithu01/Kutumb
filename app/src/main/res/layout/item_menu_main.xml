<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview_menu"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/white"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/DP8"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_items"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DP275"
            android:visibility="visible"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/DP4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/btn_add_item"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/btn_add_item"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/txt_name_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/SP14"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textAllCaps="true"
                    android:paddingLeft="@dimen/DP8"
                    android:paddingTop="@dimen/SP8"
                    android:paddingStart="@dimen/DP8"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/txt_price_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="@dimen/SP12"
                    android:textColor="@color/black"
                    android:textAllCaps="true"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/DP8"
                    android:paddingStart="@dimen/DP8"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/txt_description_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:paddingTop="@dimen/DP5"
                    android:maxLines="2"
                    android:textSize="@dimen/SP8"
                    android:textColor="@color/text_gray"
                    android:textAllCaps="true"
                    android:paddingLeft="@dimen/DP8"
                    android:paddingStart="@dimen/DP8"
                    tools:ignore="RtlSymmetry" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_add_item"
                android:background="@drawable/add_button_background"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DP35"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/SP16"
                android:text="@string/add_more"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>